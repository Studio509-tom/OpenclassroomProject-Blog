{% extends "layout.html.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12 ">
				<h1 class="title-article">{{article.title}}</h1>
			</div>
			<div class="col-12 ">
				<h2 class="chapo-article">{{article.chapo}}</h2>
			</div>
			<div class="col-12">
				<p class="content-article">{{article.content}}</p>
			</div>
			<div class="col-12">
				<p class="modify-article">
					modifi√© le
					{{article.date}}</p>
			</div>

			{% if user.id == article.author.id %}
				<div class="col-6 text-center">
					<a href="index.php?action=modifyArticlePage&id={{article.id}}">Modifier</a>
				</div>
				<div class="col-6 text-center">
					<a href="index.php?action=delete&id={{article.id}}">Supprimer l'article</a>
				</div>
			{% endif %}
			
		</div>
	</div>
{% endblock %}
