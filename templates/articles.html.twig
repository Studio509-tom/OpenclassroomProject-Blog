{% extends "layout.html.twig" %}

{% block content %}
	<div class="articles">


		<main class="container">
			{% for key, article in articles %}
				{% if loop.index0 == 0 %}

					<div class="p-4 p-md-5 my-4 rounded text-body-emphasis bg-body-secondary">
						<div class="col-lg-6 px-0">
							<h1 class="display-4 fst-italic">
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{article.title}}</font>
								</font>
							</h1>
							<p class="lead my-3">
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{article.chapo}}</font>
								</font>
							</p>
							<p class="lead mb-0">
								<a href="index?action=article&id={{article.id}}" class="text-body-emphasis fw-bold">
									<font style="vertical-align: inherit;">
										<font style="vertical-align: inherit;">Continuer la lecture...</font>
									</font>
								</a>
							</p>
							<div class="mb-1 text-body-secondary">
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{article.date}}</font>
								</font>
							</div>
							<div class="mb-1 text-body-secondary">
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{article.author.name}}
										{{article.author.firstname}}</font>
								</font>
							</div>
						</div>
					</div>
					<div class="row mb-2">

					{% else %}
						<div class="col-md-6">
							<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
								<div class="col p-4 d-flex flex-column position-static">
									<h3 class="mb-0">
										<font style="vertical-align: inherit;">
											<font style="vertical-align: inherit;">{{article.title}}</font>
										</font>
									</h3>
									<div class="mb-1 text-body-secondary">
										<font style="vertical-align: inherit;">
											<font style="vertical-align: inherit;">{{article.date}}</font>
										</font>
									</div>
									<div class="mb-1 text-body-secondary">
										<font style="vertical-align: inherit;">
											<font style="vertical-align: inherit;">{{article.author.name}}
												{{article.author.firstname}}</font>
										</font>
									</div>
									<p class="card-text mb-auto">
										<font style="vertical-align: inherit;">
											<font style="vertical-align: inherit;">{{article.chapo}}</font>
										</font>
									</p>
									<a href="index?action=article&id={{article.id}}" class="icon-link gap-1 icon-link-hover stretched-link">
										<font style="vertical-align: inherit;">
											<font style="vertical-align: inherit;">
												continuer la lecture
											</font>
										</font>
										<svg class="bi">
											<use xlink:href="#chevron-right"></use>
										</svg>
									</a>
								</div>
							</div>
						</div>


					{% endif %}

				{% endfor %}
			</div>

		</main>
	</div>
{% endblock %}
