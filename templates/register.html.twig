{% extends "layout.html.twig" %}

{% block content %}
	<div class="form-contact">
		<div class="container ">
			<div class="row">
				<div class=" my-5 col-12 text-center">
					<h2>Je crée mon compte</h2>
				</div>
				<form action="index.php?action=formRegister" method="post">
					<div class="row">
						<div class="form-group col-md-6">
							<label for="input-name">Nom</label>
							<input type="text" class="form-control input-name" name="input-name" id="input-name" placeholder="Nom"/>
						</div>
						<div class="form-group col-md-6">
							<label for="input-firstname">Prénom</label>
							<input type="text" class="form-control input-firstname" name="input-firstname" id="input-firstname" placeholder="Prénom"/>
						</div>
						<div class="form-group col-md-12">
							<label for="inputEmail4">Email</label>
							<input type="email" class="form-control inputEmail4" name="input-email" id="input-email" placeholder="Email"/>
						</div>
						<div class="form-group col-md-12">
							<label for="inputPassword">Mots de passe</label>
							<input class="form-control inputPassword" name="inputPassword" id="inputPassword" placeholder="mots de passe"/>
						</div>

					</div>
					<button type="submit">Submit</button>
				</form>

			</div>
		</div>
	</div>
{% endblock %}
